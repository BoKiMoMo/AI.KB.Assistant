<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="640" Width="840" WindowStartupLocation="CenterOwner"
        Background="#0b1220" Foreground="#f4f4f4">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Foreground" Value="#cfe3ff"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10">
            <Button Content="儲存並關閉" Width="120" Click="Save_Click"/>
            <Button Content="取消" Width="90" Click="Cancel_Click"/>
        </StackPanel>

        <ScrollViewer>
            <StackPanel Margin="10">
                <!-- App -->
                <GroupBox Header="應用程式 (App)">
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="RootDir"/>
                        <TextBox   Grid.Row="0" Grid.Column="1" x:Name="TxtRootDir"/>
                        <Button    Grid.Row="0" Grid.Column="2" Content="瀏覽" Click="BrowseRoot_Click"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="InboxDir"/>
                        <TextBox   Grid.Row="1" Grid.Column="1" x:Name="TxtInboxDir"/>
                        <Button    Grid.Row="1" Grid.Column="2" Content="瀏覽" Click="BrowseInbox_Click"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="DbPath"/>
                        <TextBox   Grid.Row="2" Grid.Column="1" x:Name="TxtDbPath"/>
                        <Button    Grid.Row="2" Grid.Column="2" Content="瀏覽" Click="BrowseDb_Click"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="DryRun"/>
                        <CheckBox  Grid.Row="3" Grid.Column="1" x:Name="ChkDryRun" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="MoveMode"/>
                        <ComboBox  Grid.Row="4" Grid.Column="1" x:Name="CmbMoveMode" Width="160">
                            <ComboBoxItem Content="move"/>
                            <ComboBoxItem Content="copy"/>
                        </ComboBox>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Overwrite"/>
                        <ComboBox  Grid.Row="5" Grid.Column="1" x:Name="CmbOverwrite" Width="160">
                            <ComboBoxItem Content="skip"/>
                            <ComboBoxItem Content="rename"/>
                            <ComboBoxItem Content="overwrite"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Routing -->
                <GroupBox Header="路徑策略 (Routing)">
                    <StackPanel Margin="6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="PathTemplate" Width="140"/>
                            <TextBox x:Name="TxtPathTemplate"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SafeCategories" Width="140"/>
                            <CheckBox x:Name="ChkSafeCategories"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Classification -->
                <GroupBox Header="分類 (Classification)">
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Engine" Width="120"/>
                                <ComboBox x:Name="CmbEngine" Width="120">
                                    <ComboBoxItem Content="llm"/>
                                    <ComboBoxItem Content="dummy"/>
                                    <ComboBoxItem Content="hybrid"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Style" Width="120"/>
                                <TextBox x:Name="TxtStyle" Width="160"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ConfidenceThreshold" Width="160"/>
                                <Slider x:Name="SldThreshold" Minimum="0" Maximum="1" TickFrequency="0.05" IsSnapToTickEnabled="True" Width="200"/>
                                <TextBlock x:Name="LblThreshold" Margin="8,0,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="FallbackCategory" Width="160"/>
                                <TextBox x:Name="TxtFallback" Width="160"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="CustomTaxonomy (可自訂分類)" Margin="0,0,0,6"/>
                            <DockPanel>
                                <TextBox x:Name="TxtNewTag" Width="200" Margin="0,0,6,0"/>
                                <Button Content="新增" Width="70" Click="AddTag_Click"/>
                                <Button Content="刪除所選" Width="90" Margin="6,0,0,0" Click="RemoveTag_Click"/>
                            </DockPanel>
                            <ListBox x:Name="LstTaxonomy" Height="140"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- OpenAI -->
                <GroupBox Header="OpenAI">
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ApiKey"/>
                        <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="PwdApiKey"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Model"/>
                        <TextBox     Grid.Row="1" Grid.Column="1" x:Name="TxtModel" Text="gpt-4o-mini"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
