{
	"AppSection": {
		"RootDir": "C:\\AIKB\\Root", // 根目錄，拖曳或匯入的檔案會存放這裡
		"InboxDir": "C:\\AIKB\\Inbox", // 收件匣，臨時檔案先放這裡
		"DbPath": "C:\\AIKB\\knowledge.db", // SQLite 資料庫路徑
		"MoveMode": "move", // 搬移模式：move / copy
		"Overwrite": "rename", // 覆寫策略：overwrite / skip / rename
		"DryRun": false // 是否只模擬（true 不實際搬檔）
	},

	"RoutingSection": {
		"PathTemplate": "{root}/{category}/{yyyy}/{MM}/", // 檔案存放路徑樣板
		"SafeCategories": true // 是否只允許安全清單中的分類
	},

	"ClassificationSection": {
		"Engine": "llm", // 分類引擎：llm / dummy / hybrid
		"Style": "topic", // 分類風格
		"ConfidenceThreshold": 0.6, // 信心度門檻 (0~1)
		"FallbackCategory": "unsorted", // 無法分類時的預設分類
		"CustomTaxonomy": [ // 自訂分類清單
			"科技",
			"財經",
			"生活",
			"文件"
		]
	},

	"OpenAI": {
		"ApiKey": "sk-xxxx...", // ⚠️ 這裡放你的 OpenAI API Key
		"Model": "gpt-4o-mini" // 模型名稱，例如：gpt-4o-mini / gpt-4o / o3-mini
	}
}
