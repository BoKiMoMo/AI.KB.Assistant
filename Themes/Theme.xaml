<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== App 基本色（淺色主題） ===== -->
    <SolidColorBrush x:Key="App.BackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="App.PanelBrush"       Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.BorderBrush"      Color="#DDDDDD"/>
    <SolidColorBrush x:Key="App.TextBrush"        Color="#222222"/>
    <SolidColorBrush x:Key="App.TextMutedBrush"   Color="#666666"/>

    <!-- Banner / 提示 -->
    <SolidColorBrush x:Key="App.BannerInfoBrush"  Color="#E8F0FE"/>
    <!-- 微淺藍 -->
    <SolidColorBrush x:Key="App.SelectionBrush"   Color="#E5F3FF"/>
    <!-- List 選取底色 -->

    <!-- 狀態色（若之後想讓 converter 改用資源，可在 XAML 直接綁這些） -->
    <SolidColorBrush x:Key="StatusBrush_Unset" Color="#9AA0A6"/>
    <SolidColorBrush x:Key="StatusBrush_Stage" Color="#F4B400"/>
    <SolidColorBrush x:Key="StatusBrush_Commit" Color="#34A853"/>
    <SolidColorBrush x:Key="StatusBrush_Error" Color="#EA4335"/>

    <!-- ===== 全域控制項樣式（維持你原本風格，做淺色微調） ===== -->

    <!-- 視窗 -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <!-- ToolBar -->
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Button（一般按鈕） -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- ListView -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- ListViewItem 選取顏色 -->
    <Style TargetType="ListViewItem">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource App.SelectionBrush}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F7F7F7"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- GridViewColumnHeader（點擊可排序時的視覺） -->
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Border（面板） -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
    </Style>

    <!-- ScrollViewer（避免深色捲動條） -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
    </Style>

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
    </Style>
</ResourceDictionary>
