<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================================================
         🎨 淺色主題配色（柔白 × 灰階 × 微藍）
         ========================================================= -->
    <!-- 主畫面用 -->
    <SolidColorBrush x:Key="App.BackgroundBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="App.PanelBrush"       Color="#FFFFFF"/>
    <SolidColorBrush x:Key="App.BorderBrush"      Color="#D1D5DB"/>
    <SolidColorBrush x:Key="App.TextBrush"        Color="#111827"/>
    <SolidColorBrush x:Key="App.TextMutedBrush"   Color="#6B7280"/>

    <!-- 主色 / 次色 -->
    <SolidColorBrush x:Key="App.PrimaryBrush"     Color="#2563EB"/>
    <SolidColorBrush x:Key="App.PrimaryHover"     Color="#3B82F6"/>
    <SolidColorBrush x:Key="App.SecondaryBrush"   Color="#E5E7EB"/>

    <!-- 狀態色（原本） -->
    <SolidColorBrush x:Key="App.BannerInfoBrush"  Color="#DBEAFE"/>
    <SolidColorBrush x:Key="App.BannerWarnBrush"  Color="#FEF3C7"/>
    <SolidColorBrush x:Key="App.BannerErrorBrush" Color="#FEE2E2"/>

    <SolidColorBrush x:Key="App.SuccessBrush"     Color="#10B981"/>
    <SolidColorBrush x:Key="App.WarningBrush"     Color="#F59E0B"/>
    <SolidColorBrush x:Key="App.ErrorBrush"       Color="#EF4444"/>

    <CornerRadius x:Key="App.CornerRadius">6</CornerRadius>
    <Thickness    x:Key="App.ControlPadding">8,6</Thickness>
    <Thickness    x:Key="App.ControlMargin">4,2</Thickness>

    <!-- =========================================================
         ✅ 別名（MainWindow.xaml 會用到的 key）
         ========================================================= -->
    <!-- Window 背景 -->
    <SolidColorBrush x:Key="App.Bg"            Color="#F9FAFB"/>
    <!-- 工具列背景 -->
    <SolidColorBrush x:Key="App.ToolbarBg"     Color="#F3F4F6"/>
    <!-- 中/右欄 Panel 與邊框 -->
    <SolidColorBrush x:Key="Panel.Bg"          Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Panel.Border"      Color="#D1D5DB"/>
    <!-- GridSplitter 顏色 -->
    <SolidColorBrush x:Key="Splitter.Bg"       Color="#E5E7EB"/>

    <!-- Banner（資訊/警告/錯誤）背景與邊框 -->
    <SolidColorBrush x:Key="Banner.InfoBg"     Color="#DBEAFE"/>
    <SolidColorBrush x:Key="Banner.InfoBorder" Color="#93C5FD"/>
    <SolidColorBrush x:Key="Banner.WarnBg"     Color="#FEF3C7"/>
    <SolidColorBrush x:Key="Banner.WarnBorder" Color="#FCD34D"/>
    <SolidColorBrush x:Key="Banner.ErrorBg"    Color="#FEE2E2"/>
    <SolidColorBrush x:Key="Banner.ErrorBorder" Color="#FCA5A5"/>

    <!-- =========================================================
         🪟 Window / Border / TextBox / ListView 等通用控制項
         ========================================================= -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource App.Bg}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="CaretBrush" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="CaretBrush" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{DynamicResource App.SecondaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>

    <Style TargetType="GroupBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{DynamicResource App.PanelBrush}"
                            CornerRadius="{DynamicResource App.CornerRadius}"
                            Padding="8">
                        <DockPanel>
                            <Label DockPanel.Dock="Top"
                                   Content="{TemplateBinding Header}"
                                   Foreground="{DynamicResource App.TextMutedBrush}"
                                   Padding="0,0,0,6"/>
                            <ContentPresenter/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================================================
         🧩 Button 基礎與變體
         ========================================================= -->
    <Style x:Key="ButtonBaseStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource App.ControlPadding}"/>
        <Setter Property="Margin" Value="{StaticResource App.ControlMargin}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource App.CornerRadius}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="{DynamicResource App.SecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="{DynamicResource App.PrimaryHover}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 次色系（TonedBtn：Toolbar） -->
    <Style x:Key="TonedBtn" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource App.SecondaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
    </Style>

    <!-- 主要動作（若之後想要高亮，可以改成 PrimaryBtn；目前你要一致就別用） -->
    <Style x:Key="PrimaryBtn" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource App.PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- 危險按鈕 -->
    <Style x:Key="DangerBtn" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource App.ErrorBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.ErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- 扁平按鈕 -->
    <Style x:Key="FlatBtn" BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource App.CornerRadius}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background"
                                    Value="{DynamicResource App.SecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background"
                                    Value="{DynamicResource App.PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
