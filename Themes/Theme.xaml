<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== App 基本色系（淺色主題） ===== -->
    <Color x:Key="App.BackgroundColor">#FFFDFDFD</Color>
    <Color x:Key="App.PanelColor">#FFF5F5F5</Color>
    <Color x:Key="App.BorderColor">#FFCCCCCC</Color>
    <Color x:Key="App.TextColor">#FF202020</Color>
    <Color x:Key="App.TextMutedColor">#FF7A7A7A</Color>
    <Color x:Key="App.HighlightColor">#FF1976D2</Color>
    <Color x:Key="App.BannerInfoColor">#FFEDF3FE</Color>
    <Color x:Key="App.LogBgColor">#FFF9F9F9</Color>

    <!-- ===== Brushes ===== -->
    <SolidColorBrush x:Key="App.BackgroundBrush" Color="{StaticResource App.BackgroundColor}"/>
    <SolidColorBrush x:Key="App.PanelBrush" Color="{StaticResource App.PanelColor}"/>
    <SolidColorBrush x:Key="App.BorderBrush" Color="{StaticResource App.BorderColor}"/>
    <SolidColorBrush x:Key="App.TextBrush" Color="{StaticResource App.TextColor}"/>
    <SolidColorBrush x:Key="App.TextMutedBrush" Color="{StaticResource App.TextMutedColor}"/>
    <SolidColorBrush x:Key="App.HighlightBrush" Color="{StaticResource App.HighlightColor}"/>
    <SolidColorBrush x:Key="App.BannerInfoBrush" Color="{StaticResource App.BannerInfoColor}"/>
    <SolidColorBrush x:Key="App.LogBrush" Color="{StaticResource App.LogBgColor}"/>

    <!-- ===== 全域樣式 ===== -->

    <!-- 按鈕 -->
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="Margin" Value="3,2,3,2"/>
    </Style>

    <!-- 標題 -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- GridView Header -->
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- ScrollViewer -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
    </Style>

    <!-- Expander -->
    <Style TargetType="Expander">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- ListView -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- TreeView -->
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
    </Style>

    <!-- Slider -->
    <Style TargetType="Slider">
        <Setter Property="Foreground" Value="{DynamicResource App.HighlightBrush}"/>
    </Style>

</ResourceDictionary>
