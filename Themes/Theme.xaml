<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================
         調色盤：淺色（Light）
         ========================= -->
    <!-- 基礎色 -->
    <Color x:Key="Light.Background">#FFF9FAFB</Color>
    <!-- 幾乎白、略帶灰藍，避免刺眼 -->
    <Color x:Key="Light.Panel">#FFFFFFFF</Color>
    <Color x:Key="Light.Border">#FFE5E7EB</Color>
    <!-- gray-200 -->
    <Color x:Key="Light.Text">#FF111827</Color>
    <!-- gray-900 -->
    <Color x:Key="Light.TextMuted">#FF6B7280</Color>
    <!-- gray-500 -->
    <Color x:Key="Light.Primary">#FF2563EB</Color>
    <!-- 藍色主色 -->
    <Color x:Key="Light.PrimaryHover">#FF1D4ED8</Color>
    <Color x:Key="Light.Warning">#FFF59E0B</Color>
    <Color x:Key="Light.Success">#FF10B981</Color>
    <Color x:Key="Light.Error">#FFEF4444</Color>
    <Color x:Key="Light.BannerInfo">#FFEFF6FF</Color>
    <!-- 藍系淡底 -->
    <Color x:Key="Light.BannerWarn">#FFFEF3C7</Color>
    <Color x:Key="Light.BannerError">#FFFEE2E2</Color>
    <Color x:Key="Light.BannerBorder">#FFCBD5E1</Color>
    <!-- slate-300 -->

    <!-- =========================
         調色盤：深色（Dark）(可選)
         ========================= -->
    <Color x:Key="Dark.Background">#FF0B1220</Color>
    <!-- 深藍灰，降低純黑陰影感 -->
    <Color x:Key="Dark.Panel">#FF0F172A</Color>
    <!-- slate-900 -->
    <Color x:Key="Dark.Border">#FF334155</Color>
    <!-- slate-700 -->
    <Color x:Key="Dark.Text">#FFE5E7EB</Color>
    <!-- 對比足夠的淺灰 -->
    <Color x:Key="Dark.TextMuted">#FF94A3B8</Color>
    <!-- slate-400 -->
    <Color x:Key="Dark.Primary">#FF60A5FA</Color>
    <Color x:Key="Dark.PrimaryHover">#FF3B82F6</Color>
    <Color x:Key="Dark.Warning">#FFFBBF24</Color>
    <Color x:Key="Dark.Success">#FF34D399</Color>
    <Color x:Key="Dark.Error">#FFF87171</Color>
    <Color x:Key="Dark.BannerInfo">#FF0B284A</Color>
    <Color x:Key="Dark.BannerWarn">#FF3A2F0A</Color>
    <Color x:Key="Dark.BannerError">#FF3B0A0A</Color>
    <Color x:Key="Dark.BannerBorder">#FF475569</Color>

    <!-- =========================
         啟用中的主題別名  (預設：Light)
         之後切換主題時，只要把這一組 Brush 換成 Dark 調色盤即可
         ========================= -->
    <SolidColorBrush x:Key="App.BackgroundBrush" Color="{StaticResource Light.Background}"/>
    <SolidColorBrush x:Key="App.PanelBrush"      Color="{StaticResource Light.Panel}"/>
    <SolidColorBrush x:Key="App.BorderBrush"     Color="{StaticResource Light.Border}"/>
    <SolidColorBrush x:Key="App.TextBrush"       Color="{StaticResource Light.Text}"/>
    <SolidColorBrush x:Key="App.TextMutedBrush"  Color="{StaticResource Light.TextMuted}"/>

    <SolidColorBrush x:Key="App.PrimaryBrush"        Color="{StaticResource Light.Primary}"/>
    <SolidColorBrush x:Key="App.PrimaryHoverBrush"   Color="{StaticResource Light.PrimaryHover}"/>
    <SolidColorBrush x:Key="App.SuccessBrush"        Color="{StaticResource Light.Success}"/>
    <SolidColorBrush x:Key="App.WarningBrush"        Color="{StaticResource Light.Warning}"/>
    <SolidColorBrush x:Key="App.ErrorBrush"          Color="{StaticResource Light.Error}"/>

    <SolidColorBrush x:Key="App.BannerInfoBrush"   Color="{StaticResource Light.BannerInfo}"/>
    <SolidColorBrush x:Key="App.BannerWarnBrush"   Color="{StaticResource Light.BannerWarn}"/>
    <SolidColorBrush x:Key="App.BannerErrorBrush"  Color="{StaticResource Light.BannerError}"/>
    <SolidColorBrush x:Key="App.BannerBorderBrush" Color="{StaticResource Light.BannerBorder}"/>

    <!-- =========================
         基本控制項樣式（輕量、可讀性優先）
         ========================= -->
    <!-- Window / Page 背景 -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <!-- Panel 類 -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
    </Style>

    <!-- Button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource App.PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.PrimaryBrush}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource App.PrimaryHoverBrush}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource App.PrimaryHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 次要按鈕（工具列常用） -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource App.PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource App.PrimaryHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox / ComboBox -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- ToolBar -->
    <Style TargetType="{x:Type ToolBar}">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- GridSplitter -->
    <Style TargetType="GridSplitter">
        <Setter Property="Background" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="ShowsPreview" Value="True"/>
    </Style>

    <!-- ListView -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- 舊專案相容：許多 XAML 參考了 TonedBtn / ToolbarBtn -->
    <Style x:Key="TonedBtn" TargetType="Button" BasedOn="{StaticResource SecondaryButton}" />
    <Style x:Key="ToolbarBtn" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>


</ResourceDictionary>
