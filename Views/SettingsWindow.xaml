<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Height="560" Width="860"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI, Microsoft JhengHei">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- RootDir -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="根目錄：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtRootDir" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="瀏覽…" Grid.Row="0" Grid.Column="2" Margin="5" Click="BrowseRoot_Click"/>

        <!-- InboxDir -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="收件匣：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtInboxDir" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button Content="瀏覽…" Grid.Row="1" Grid.Column="2" Margin="5" Click="BrowseInbox_Click"/>

        <!-- DbPath -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="資料庫檔：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtDbPath" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="選檔…" Grid.Row="2" Grid.Column="2" Margin="5" Click="BrowseDb_Click"/>

        <!-- Project -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="專案名稱：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtProject" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <!-- Routing -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="分類風格：" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox  x:Name="CmbMode" Grid.Row="4" Grid.Column="1" Margin="5" SelectedIndex="0">
            <ComboBoxItem Content="category"/>
            <ComboBoxItem Content="date"/>
            <ComboBoxItem Content="project"/>
        </ComboBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="時間顆粒度：" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox  x:Name="CmbGran" Grid.Row="5" Grid.Column="1" Margin="5" SelectedIndex="1">
            <ComboBoxItem Content="year"/>
            <ComboBoxItem Content="month"/>
            <ComboBoxItem Content="day"/>
        </ComboBox>

        <!-- Flags -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,12,0,0">
            <CheckBox x:Name="ChkDryRun"    Content="乾跑（不實際移動檔案）" Margin="0,0,16,0"/>
            <CheckBox x:Name="ChkOverwrite" Content="覆寫同名檔案"          Margin="0,0,16,0"/>
            <TextBlock Text="移動模式：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbMoveMode" Width="120">
                <ComboBoxItem Content="copy" IsSelected="True"/>
                <ComboBoxItem Content="move"/>
            </ComboBox>
        </StackPanel>

        <!-- Save / Cancel -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="儲存" Width="92" Margin="5" Click="Save_Click"/>
            <Button Content="取消" Width="92" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
