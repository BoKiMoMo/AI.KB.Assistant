<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Height="540" Width="860"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI, Microsoft JhengHei">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- RootDir -->
            <RowDefinition Height="Auto"/>
            <!-- InboxDir -->
            <RowDefinition Height="Auto"/>
            <!-- DbPath -->
            <RowDefinition Height="Auto"/>
            <!-- API Key -->
            <RowDefinition Height="Auto"/>
            <!-- Flags -->
            <RowDefinition Height="Auto"/>
            <!-- Routing / Classification -->
            <RowDefinition Height="*"/>
            <!-- Tips -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- RootDir -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="根目錄：" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox   x:Name="TxtRootDir" Grid.Row="0" Grid.Column="1" Margin="6"/>
        <Button Content="瀏覽…" Grid.Row="0" Grid.Column="2" Margin="6" Click="BrowseRoot_Click"/>

        <!-- InboxDir -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="收件匣：" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox   x:Name="TxtInboxDir" Grid.Row="1" Grid.Column="1" Margin="6"/>
        <Button Content="瀏覽…" Grid.Row="1" Grid.Column="2" Margin="6" Click="BrowseInbox_Click"/>

        <!-- DbPath -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="資料庫檔：" VerticalAlignment="Center" Margin="0,6"/>
        <TextBox   x:Name="TxtDbPath" Grid.Row="2" Grid.Column="1" Margin="6"/>
        <Button Content="選檔…" Grid.Row="2" Grid.Column="2" Margin="6" Click="BrowseDb_Click"/>

        <!-- API Key -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="OpenAI API Key：" VerticalAlignment="Center" Margin="0,6"/>
        <PasswordBox x:Name="TxtApiKey" Grid.Row="3" Grid.Column="1" Margin="6" PasswordChar="●"/>

        <!-- Flags -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,10,0,0">
            <CheckBox x:Name="ChkDryRun"    Content="乾跑（不實際移動檔案）" Margin="0,0,16,0"/>
            <CheckBox x:Name="ChkOverwrite" Content="覆寫同名檔案"          Margin="0,0,16,0"/>
            <TextBlock Text="移動模式：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbMoveMode" Width="120">
                <ComboBoxItem Content="copy"/>
                <ComboBoxItem Content="move"/>
            </ComboBox>
        </StackPanel>

        <!-- Routing / Classification -->
        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="分類風格：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbClassificationMode" Grid.Column="1" Width="150">
                <!-- 對應：cfg.Classification.ClassificationMode -->
                <ComboBoxItem Content="category"/>
                <ComboBoxItem Content="project"/>
                <ComboBoxItem Content="date"/>
            </ComboBox>

            <TextBlock Grid.Column="3" Text="時間粒度：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbTimeGranularity" Grid.Column="4" Width="150">
                <!-- 對應：cfg.Routing.TimeGranularity -->
                <ComboBoxItem Content="month"/>
                <ComboBoxItem Content="day"/>
                <ComboBoxItem Content="year"/>
            </ComboBox>
        </Grid>

        <TextBlock Grid.Row="6" Grid.ColumnSpan="3" Margin="0,14,0,0" Foreground="#666">
            小技巧：選資料夾時，跳出的檔案對話框請在欲選取的資料夾中隨便輸入檔名後按【儲存/開啟】，
            本程式會取其資料夾路徑（無需安裝 WinForms 或額外套件）。
        </TextBlock>

        <!-- Save / Cancel -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="儲存" Width="96" Margin="6" Click="Save_Click"/>
            <Button Content="取消" Width="96" Margin="6" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
