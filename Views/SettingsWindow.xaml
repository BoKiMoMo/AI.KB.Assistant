<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="680" Width="920"
        WindowStartupLocation="CenterOwner"
        Background="#0B1220" Foreground="#F4F4F4"
        FontFamily="Segoe UI, Microsoft JhengHei">

    <DockPanel>

        <!-- 底部：動作列 -->
        <Border DockPanel.Dock="Bottom" Background="#111A2E" Padding="12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="取消" Width="100" Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button x:Name="BtnSave"   Content="儲存" Width="120" Click="Save_Click"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- ===== 一般 ===== -->
                <TextBlock Text="一般" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 專案 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="目前專案：" />
                    <ComboBox  Grid.Row="0" Grid.Column="1" x:Name="CmbProjects" Width="240" IsEditable="True"
                               ToolTip="可選擇或輸入專案名稱（僅顯示使用，不影響檔案）"/>

                    <!-- 乾跑 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="乾跑（不實際搬檔）：" />
                    <CheckBox  Grid.Row="2" Grid.Column="1" x:Name="ChkDryRun" Content="啟用乾跑模式"/>

                    <!-- 搜尋（示範） -->
                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="搜尋：" />
                    <TextBox   Grid.Row="4" Grid.Column="1" x:Name="SearchBox" Width="320"
                               ToolTip="輸入關鍵字（示範用）"
                               TextChanged="SearchBox_TextChanged"/>
                </Grid>

                <Separator/>

                <!-- ===== 自訂分類清單（示範） ===== -->
                <TextBlock Text="自訂分類清單" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,6"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBox x:Name="TxtNewTag" Width="260" ToolTip="輸入要新增的分類"/>
                    <Button Content="新增" Width="90" Margin="8,0,0,0" Click="AddTag_Click"/>
                    <Button Content="移除所選" Width="110" Margin="8,0,0,0" Click="RemoveTag_Click"/>
                </StackPanel>
                <ListBox x:Name="LstTaxonomy" Height="140" />

                <Separator/>

                <!-- ===== 檔案清單（為了滿足 ListFiles 名稱，示範資料） ===== -->
                <TextBlock Text="檔案清單（示範用 ListFiles 名稱）" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,6"/>
                <ListView x:Name="ListFiles" Height="180">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="檔名" DisplayMemberBinding="{Binding}" Width="300"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
