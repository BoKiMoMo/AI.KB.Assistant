<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="560" Width="820"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource PanelBackground}">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#FFF" />
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,4,0,6"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12">

                <!-- 路徑設定 -->
                <GroupBox Header="路徑設定">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="資料庫路徑 (SQLite)" VerticalAlignment="Center"/>
                        <TextBox x:Name="TbDbPath" Grid.Column="1"/>
                        <Button Grid.Column="2" Content="瀏覽…" Click="BrowseDb_Click"/>

                        <TextBlock Grid.Row="1" Text="資料根目錄 (RootDir)" Margin="0,36,0,0" VerticalAlignment="Center"/>
                        <TextBox x:Name="TbRootDir" Grid.Row="1" Grid.Column="1" Margin="0,32,0,0"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="瀏覽…" Margin="4,32,4,0" Click="BrowseRoot_Click"/>

                        <TextBlock Grid.Row="2" Text="收件夾 (HotFolder)" Margin="0,72,0,0" VerticalAlignment="Center"/>
                        <TextBox x:Name="TbHotFolder" Grid.Row="2" Grid.Column="1" Margin="0,68,0,0"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="瀏覽…" Margin="4,68,4,0" Click="BrowseHotFolder_Click"/>
                    </Grid>
                </GroupBox>

                <!-- 路徑規則 -->
                <GroupBox Header="目的路徑層級（分類深度）">
                    <StackPanel>
                        <CheckBox x:Name="CbYear"    Content="年份 (Year)" />
                        <CheckBox x:Name="CbMonth"   Content="月份 (Month)"/>
                        <CheckBox x:Name="CbProject" Content="專案名稱 (Project)"/>
                        <CheckBox x:Name="CbCategory"Content="語意／業務分類 (Category)"/>
                        <CheckBox x:Name="CbType"    Content="檔案型態群組 (Type：圖片/影音/文件/…)" />
                        <TextBlock Foreground="Gray" Text="生成路徑範例：Root/[Year]/[Project]/[Category]/[Type]/" Margin="0,6,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- OpenAI / LLM -->
                <GroupBox Header="AI / LLM 設定">
                    <StackPanel>
                        <CheckBox x:Name="CbEnableAI" Content="信心不足時啟用 LLM 協助分類 / 提案專案名稱"/>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="API Key" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbApiKey" Grid.Column="1"/>

                            <TextBlock Grid.Row="1" Text="Base URL (可留白)" Margin="0,36,0,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbBaseUrl" Grid.Row="1" Grid.Column="1" Margin="0,32,0,0"/>

                            <TextBlock Grid.Row="2" Text="模型 (可留白)" Margin="0,72,0,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbModel" Grid.Row="2" Grid.Column="1" Margin="0,68,0,0" Text="gpt-4o-mini"/>
                        </Grid>
                        <TextBlock Foreground="Gray" Text="未填 API Key：系統仍可運作，但 AI 建議會改用啟發式，不會呼叫雲端模型。"/>
                    </StackPanel>
                </GroupBox>

                <!-- 主題 -->
                <GroupBox Header="主題與外觀">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="主題：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="CmbTheme" Width="160">
                            <ComboBoxItem Content="淺色"/>
                            <ComboBoxItem Content="深色"/>
                            <ComboBoxItem Content="跟隨系統"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- 操作 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="儲存" Click="Save_Click"/>
                    <Button Content="取消" Click="Cancel_Click"/>
                </StackPanel>

                <!-- 說明 -->
                <TextBlock Margin="10,4,10,20" TextWrapping="Wrap"
                           Foreground="Gray"
                           Text="說明：此頁設定會即時寫回 config.json。路徑變更不會移動既有檔案，僅影響後續分類目的地。" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
