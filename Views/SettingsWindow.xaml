<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Height="560" Width="860"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI, Microsoft JhengHei">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- App flags -->
            <RowDefinition Height="Auto"/>
            <!-- 分類風格 -->
            <RowDefinition Height="Auto"/>
            <!-- 時間粒度 -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- RootDir -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="根目錄：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtRootDir" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="瀏覽…" Grid.Row="0" Grid.Column="2" Margin="5" Click="BrowseRoot_Click"/>

        <!-- InboxDir -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="收件匣：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtInboxDir" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button Content="瀏覽…" Grid.Row="1" Grid.Column="2" Margin="5" Click="BrowseInbox_Click"/>

        <!-- DbPath -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="資料庫檔：" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox   x:Name="TxtDbPath" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="選檔…" Grid.Row="2" Grid.Column="2" Margin="5" Click="BrowseDb_Click"/>

        <!-- API Key -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="OpenAI API Key：" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="TxtApiKey" Grid.Row="3" Grid.Column="1" Margin="5" PasswordChar="●"/>

        <!-- App flags -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,10,0,0">
            <CheckBox x:Name="ChkDryRun"    Content="乾跑（不實際移動檔案）" Margin="0,0,16,0"/>
            <CheckBox x:Name="ChkOverwrite" Content="覆寫同名檔案"          Margin="0,0,16,0"/>
            <TextBlock Text="移動模式：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbMoveMode" Width="120">
                <ComboBoxItem Content="copy" IsSelected="True"/>
                <ComboBoxItem Content="move"/>
            </ComboBox>
        </StackPanel>

        <!-- 分類風格 -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="分類風格：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbClassificationMode" Width="160">
                <ComboBoxItem Content="category"/>
                <ComboBoxItem Content="date"/>
                <ComboBoxItem Content="project"/>
            </ComboBox>
            <TextBlock Text="（category：依類別；date：依年/月/日；project：專案 + 日期）"
                       VerticalAlignment="Center" Margin="12,0,0,0" Foreground="#666"/>
        </StackPanel>

        <!-- 時間粒度 -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,6,0,0">
            <TextBlock Text="時間粒度：" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbTimeGranularity" Width="160">
                <ComboBoxItem Content="day"/>
                <ComboBoxItem Content="month"/>
                <ComboBoxItem Content="year"/>
            </ComboBox>
            <TextBlock Text="（date 分類時使用，例如：年/季/月/週/日：目前提供 day/month/year）"
                       VerticalAlignment="Center" Margin="12,0,0,0" Foreground="#666"/>
        </StackPanel>

        <TextBlock Grid.Row="7" Grid.ColumnSpan="3" Margin="0,16,0,0" Foreground="#666">
            小技巧：選資料夾時，跳出的檔案對話框請在欲選取的資料夾中隨便輸入檔名後按【儲存/開啟】，本程式會取其資料夾路徑。
        </TextBlock>

        <!-- Save / Cancel -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="儲存" Width="88" Margin="5" Click="Save_Click"/>
            <Button Content="取消" Width="88" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
