<Window x:Class="AI.KB.Assistant.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="420" Width="600"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="12">
        <TextBlock Text="根目錄：" Margin="0,4"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TxtRootDir" Width="400"/>
            <Button Content="選擇" Width="60" Margin="6,0,0,0" Click="BtnBrowseRoot_Click"/>
        </StackPanel>

        <TextBlock Text="資料庫：" Margin="0,8"/>
        <TextBox x:Name="TxtDbPath" Width="400"/>

        <CheckBox x:Name="ChkDryRun" Content="DryRun 模式" Margin="0,8"/>
        <TextBlock Text="搬檔模式：" Margin="0,4"/>
        <ComboBox x:Name="CmbMoveMode" Width="150">
            <ComboBoxItem Content="copy"/>
            <ComboBoxItem Content="move"/>
        </ComboBox>

        <TextBlock Text="覆寫策略：" Margin="0,8"/>
        <ComboBox x:Name="CmbOverwrite" Width="150">
            <ComboBoxItem Content="skip"/>
            <ComboBoxItem Content="rename"/>
            <ComboBoxItem Content="replace"/>
        </ComboBox>

        <CheckBox x:Name="ChkClose" Content="關閉視窗後套用" Margin="0,12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="確定" Width="80" Margin="6,0,0,0" Click="BtnOk_Click"/>
            <Button Content="取消" Width="80" Margin="6,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
