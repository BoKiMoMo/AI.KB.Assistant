<Window x:Class="AI.KB.Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI.KB.Assistant"
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource App.BackgroundBrush}"
        Foreground="{DynamicResource App.TextBrush}">
    <Window.Resources>
        <!-- 通用按鈕 -->
        <Style x:Key="TonedBtn" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
        </Style>
        <Style x:Key="ToolbarBtn" TargetType="Button" BasedOn="{StaticResource TonedBtn}">
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="ShowsPreview" Value="True"/>
            <Setter Property="Width" Value="5"/>
        </Style>

        <!-- 置頂四顆路徑籤 -->
        <DataTemplate x:Key="TopPathTemplate">
            <Border CornerRadius="4" Padding="6,4" Margin="0,0,8,0"
                    Background="{DynamicResource App.PanelBrush}"
                    BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Label}" FontWeight="Bold" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Path}" Foreground="{DynamicResource App.TextMutedBrush}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- 工具列 -->
        <ToolBar DockPanel.Dock="Top">
            <Button Style="{StaticResource ToolbarBtn}" Content="＋ 加入…" Click="BtnAddFiles_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="檢視分類" Click="BtnStartClassify_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="確認搬檔" Click="BtnCommit_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="⟳ 重新整理" Click="BtnRefresh_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="⚙ 設定" Click="BtnOpenSettings_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="🗂 收件夾" Click="BtnOpenInbox_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="路徑樹" Click="BtnEdgeLeft_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="資訊欄" Click="BtnEdgeRight_Click"/>
        </ToolBar>

        <!-- 置頂路徑籤 + 搜尋/鎖定 -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="12,8,12,8" VerticalAlignment="Center">
            <ItemsControl x:Name="TopPaths" ItemTemplate="{StaticResource TopPathTemplate}" Margin="0,0,12,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- 麵包屑(保留容器，程式碼端可自行填充) -->
            <StackPanel Orientation="Horizontal" x:Name="PathStrip" VerticalAlignment="Center"/>

            <!-- 專案鎖定/搜尋（僅 UI 容器，事件在程式碼端處理） -->
            <Border Margin="8,0,0,0" BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="1" Padding="6,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="專案鎖定：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="CbLockProject" Width="220" IsEditable="True" />
                    <Button Content="搜尋" Margin="6,0,0,0" Style="{StaticResource TonedBtn}" Click="BtnSearchProject_Click"/>
                    <Button Content="切換鎖定" Margin="6,0,0,0" Style="{StaticResource TonedBtn}" Click="BtnLockProject_Click"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                <TextBlock Text="目錄搜尋：" VerticalAlignment="Center" Margin="8,0,6,0"/>
                <TextBox x:Name="TvFilterBox" Width="220"/>
            </StackPanel>
        </StackPanel>

        <!-- Banner -->
        <Border x:Name="Banner" DockPanel.Dock="Top" Visibility="Collapsed" Padding="10"
                Background="{DynamicResource App.BannerInfoBrush}"
                BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="1">
            <TextBlock x:Name="BannerText" />
        </Border>

        <!-- 主區域 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaneColumn" Width="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition x:Name="RightPaneColumn" Width="320"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 左：資料夾樹 -->
            <DockPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top">
                    <TextBlock Text="資料夾" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <TreeView x:Name="TvFolders" SelectedItemChanged="TvFolders_SelectedItemChanged" Margin="8">
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="在檔案總管開啟" Click="Tree_OpenInExplorer_Click"/>
                            <Separator/>
                            <MenuItem Header="整份資料夾加入收件夾" Click="Tree_MoveFolderToInbox_Click"/>
                            <Separator/>
                            <MenuItem Header="以此資料夾名稱鎖定專案" Click="Tree_LockProject_Click"/>
                            <MenuItem Header="解除專案鎖定" Click="Tree_UnlockProject_Click"/>
                            <Separator/>
                            <MenuItem Header="重新命名資料夾" Click="Tree_Rename_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </DockPanel>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />

            <!-- 中：清單 + 分頁 -->
            <DockPanel Grid.Column="2">
                <TabControl x:Name="MainTabs" SelectionChanged="MainTabs_SelectionChanged">
                    <TabItem Header="主頁" Tag="home">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListView x:Name="FileList" Grid.Row="0" SelectionMode="Extended" MouseDoubleClick="List_DoubleClick">
                                <ListView.View>
                                    <GridView x:Name="MainGridView" AllowsColumnReorder="True">
                                        <GridViewColumn Width="220">
                                            <GridViewColumnHeader Tag="Name" Click="ListHeader_Click">Name</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Filename"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="80">
                                            <GridViewColumnHeader Tag="Ext" Click="ListHeader_Click">Ext</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Ext"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="160">
                                            <GridViewColumnHeader Tag="Project" Click="ListHeader_Click">Project</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Project"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="180">
                                            <GridViewColumnHeader Tag="Tag" Click="ListHeader_Click">Tag</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Tags"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="280">
                                            <GridViewColumnHeader Tag="Path" Click="ListHeader_Click">路徑</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="Path"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="320">
                                            <GridViewColumnHeader Tag="PredictedPath" Click="ListHeader_Click">預計路徑</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="ProposedPath"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                        <GridViewColumn Width="140">
                                            <GridViewColumnHeader Tag="CreatedTs" Click="ListHeader_Click">CreatedTs</GridViewColumnHeader>
                                            <GridViewColumn.DisplayMemberBinding>
                                                <Binding Path="CreatedTs"/>
                                            </GridViewColumn.DisplayMemberBinding>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <DockPanel Grid.Row="1" Margin="8">
                                <TextBlock x:Name="TxtCounter" />
                                <StackPanel x:Name="BatchBar" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="批次：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <Button Content="套用標籤" Style="{StaticResource TonedBtn}"/>
                                    <Button Content="移除" Style="{StaticResource TonedBtn}"/>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="我的最愛" Tag="fav"/>
                    <TabItem Header="處理中" Tag="processing"/>
                    <TabItem Header="待處理" Tag="backlog"/>
                    <TabItem Header="黑名單" Tag="blacklist"/>
                    <TabItem Header="自動整理（待確認）" Tag="autosort-staging"/>
                </TabControl>
            </DockPanel>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" />

            <!-- 右：資訊欄 -->
            <DockPanel Grid.Column="4">
                <StackPanel Margin="8">
                    <TextBlock Text="資訊" FontWeight="Bold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="信心門檻：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <Slider x:Name="RtThreshold" Minimum="0" Maximum="1" Width="160" />
                        <TextBlock x:Name="RtThresholdValue" Margin="6,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="名稱" FontWeight="Bold" Margin="0,4,0,0"/>
                    <TextBlock x:Name="RtName" TextWrapping="Wrap" />
                    <TextBlock Text="摘要" FontWeight="Bold" Margin="0,6,0,0"/>
                    <TextBlock x:Name="RtMeta" TextWrapping="Wrap"/>
                    <TextBlock Text="路徑" FontWeight="Bold" Margin="0,6,0,0"/>
                    <TextBlock x:Name="RtPath" TextWrapping="Wrap"/>

                    <TextBlock Text="黑名單資料夾（逗號分隔）" Margin="0,12,0,4"/>
                    <TextBox x:Name="RtBlacklist" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="套用" Style="{StaticResource TonedBtn}" Click="BtnApplyAiTuning_Click"/>
                        <Button Content="重新載入設定" Margin="8,0,0,0" Style="{StaticResource TonedBtn}" Click="BtnReloadSettings_Click"/>
                    </StackPanel>

                    <Separator Margin="0,12,0,12"/>

                    <TextBlock Text="AI 工具" FontWeight="Bold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="產生建議" Style="{StaticResource TonedBtn}" Click="BtnGenTags_Click"/>
                        <Button Content="摘要" Margin="8,0,0,0" Style="{StaticResource TonedBtn}" Click="BtnSummarize_Click"/>
                        <Button Content="信心分析" Margin="8,0,0,0" Style="{StaticResource TonedBtn}" Click="BtnAnalyzeConfidence_Click"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- 下：Log -->
            <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="8,8,8,12">
                <Expander x:Name="LogExpander" Header="紀錄（Log）" IsExpanded="False">
                    <Border BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="NoWrap"
                                     Background="{DynamicResource App.PanelBrush}" BorderThickness="0" MinHeight="80"/>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
