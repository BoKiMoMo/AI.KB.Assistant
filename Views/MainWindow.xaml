<Window x:Class="AI.KB.Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI.KB.Assistant.Views"
        Title="AI.KB.Assistant" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- 狀態色票 -->
        <SolidColorBrush x:Key="StatusBrush_Unset" Color="#9AA0A6"/>
        <SolidColorBrush x:Key="StatusBrush_Stage" Color="#F4B400"/>
        <SolidColorBrush x:Key="StatusBrush_Commit" Color="#34A853"/>
        <SolidColorBrush x:Key="StatusBrush_Error" Color="#EA4335"/>

        <!-- 標籤膠囊 -->
        <Style x:Key="TagPill" TargetType="ToggleButton">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="42"/>
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bd" CornerRadius="10" Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#DDEBFF"/>
                                <Setter Property="BorderBrush" Value="#8AB4F8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F7F7F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 狀態徽章 -->
        <DataTemplate x:Key="StatusBadgeTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                    <Ellipse.Fill>
                        <MultiBinding Converter="{x:Static local:MainWindow.StatusToBrushConverterInstance}">
                            <Binding Path="Status"/>
                            <Binding RelativeSource="{RelativeSource AncestorType=Window}"/>
                        </MultiBinding>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding Status, Converter={x:Static local:MainWindow.StatusToLabelConverterInstance}}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

        <!-- 路徑欄：切換實際/預測 -->
        <DataTemplate x:Key="PathColumnTemplate">
            <Grid>
                <TextBlock x:Name="Actual" Text="{Binding Path}" ToolTip="{Binding Path}"/>
                <TextBlock x:Name="Pred"   Text="{Binding ProposedPath}" ToolTip="{Binding ProposedPath}" Visibility="Collapsed"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsPreviewMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                    <Setter TargetName="Actual" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="Pred"   Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- 標籤欄 -->
        <DataTemplate x:Key="TagsColumnTemplate">
            <StackPanel Orientation="Horizontal">
                <ToggleButton Style="{StaticResource TagPill}" Content="最愛"
                              IsChecked="{Binding ., Converter={x:Static local:MainWindow.TagCheckedConverterInstance}, ConverterParameter=favorite}"
                              Click="TagPill_Click"/>
                <ToggleButton Style="{StaticResource TagPill}" Content="代辦"
                              IsChecked="{Binding ., Converter={x:Static local:MainWindow.TagCheckedConverterInstance}, ConverterParameter=todo}"
                              Click="TagPill_Click"/>
                <ToggleButton Style="{StaticResource TagPill}" Content="進行"
                              IsChecked="{Binding ., Converter={x:Static local:MainWindow.TagCheckedConverterInstance}, ConverterParameter=doing}"
                              Click="TagPill_Click"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具列 -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8,8,8,4">
            <Button x:Name="BtnAddFiles" Content="加入檔案" Click="BtnAddFiles_Click" Margin="0,0,8,0" Padding="10,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="檢視分類：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="CmbPathView" Width="140" SelectionChanged="CmbPathView_SelectionChanged">
                    <ComboBoxItem Tag="actual" IsSelected="True">實際路徑</ComboBoxItem>
                    <ComboBoxItem Tag="pred">預測路徑</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <Button x:Name="BtnCommit" Content="提交" Click="BtnCommit_Click" Padding="10,4" Margin="0,0,8,0"/>
            <Button x:Name="BtnRefresh" Content="重新整理" Click="BtnRefresh_Click" Padding="10,4"/>
            <DockPanel DockPanel.Dock="Right" LastChildFill="False">
                <Button Content="設定" Click="BtnOpenSettings_Click" Padding="10,4" Margin="8,0,0,0"/>
            </DockPanel>
        </DockPanel>

        <!-- 主體：左清單 + 右詳情 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- 主清單 -->
            <ListView x:Name="FileList" Grid.Column="0" SelectionMode="Extended" MouseDoubleClick="List_DoubleClick">
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn Width="40" Header="#">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}, Mode=TwoWay}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="200">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="檔名" Click="ListHeader_Click" Tag="name"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path, Converter={x:Static local:MainWindow.FileNameConverterInstance}}" ToolTip="{Binding Path}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="90">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="副檔名" Click="ListHeader_Click" Tag="ext"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path, Converter={x:Static local:MainWindow.FileExtConverterInstance}}" ToolTip="{Binding Path}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="210">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="標籤"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <StaticResource ResourceKey="TagsColumnTemplate"/>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="320">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader x:Name="HdrPath" Content="路徑"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <StaticResource ResourceKey="PathColumnTemplate"/>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="120">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="狀態" Click="ListHeader_Click" Tag="status"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <StaticResource ResourceKey="StatusBadgeTemplate"/>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="160">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="更新時間" Click="ListHeader_Click" Tag="updated"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding UpdatedAt, StringFormat={}{0:yyyy/MM/dd HH:mm:ss}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <GridSplitter Grid.Column="1" Width="5" Background="#EEE" HorizontalAlignment="Stretch"/>

            <!-- 右側詳情（先放核心欄位，保留你既有樣式） -->
            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="詳細資料" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding ElementName=FileList, Path=SelectedItem.Path}" TextWrapping="Wrap" />
                    <TextBlock Text="{Binding ElementName=FileList, Path=SelectedItem.ProposedPath}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    <TextBlock Text="{Binding ElementName=FileList, Path=SelectedItem.Status}" Margin="0,4,0,0"/>
                    <TextBlock Text="{Binding ElementName=FileList, Path=SelectedItem.UpdatedAt, StringFormat={}{0:yyyy/MM/dd HH:mm:ss}}" Margin="0,4,0,0"/>
                    <!-- TODO: 信心分數；建議專案名（V7.5 再接 AI） -->
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
