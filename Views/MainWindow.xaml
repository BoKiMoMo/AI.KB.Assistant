<Window x:Class="AI.KB.Assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:AI.KB.Assistant.Helpers"
        Title="AI 知識庫助手"
        Height="720" Width="1200">

    <Window.Resources>
        <conv:UnixToDateConverter x:Key="UnixToDateConverter"/>
    </Window.Resources>

    <!-- 範例：CreatedTs 綁定 -->
    <Grid>
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="檔案" DisplayMemberBinding="{Binding Filename}"/>
                    <GridViewColumn Header="分類" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="信心度" DisplayMemberBinding="{Binding Confidence}"/>
                    <GridViewColumn Header="建立時間"
                                    DisplayMemberBinding="{Binding CreatedTs, Converter={StaticResource UnixToDateConverter}}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
