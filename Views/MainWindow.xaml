<Window x:Class="AI.KB.Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI.KB.Assistant.Views"
        Title="AI.KB Assistant"
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource App.BackgroundBrush}"
        Foreground="{DynamicResource App.TextBrush}">
    <Window.Resources>
        <!-- 工具列按鈕 -->
        <Style x:Key="ToolbarBtn" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
        </Style>

        <!-- 麵包屑項目 -->
        <DataTemplate x:Key="BreadcrumbItem">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="  ›  " Margin="4,0,4,0"
                           Foreground="{DynamicResource App.TextMutedBrush}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>

        <!-- 工具列 -->
        <ToolBar DockPanel.Dock="Top">
            <Button Style="{StaticResource ToolbarBtn}" Content="＋ 加入檔案" Click="BtnAddFiles_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="檢視分類" Click="BtnStartClassify_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="確認搬檔" Click="BtnCommit_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="⟳ 重新整理" Click="BtnRefresh_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="🗂 收件夾" Click="BtnOpenHot_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="📁 根目錄" Click="BtnOpenRoot_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="🗄 資料庫" Click="BtnOpenDb_Click"/>
            <Separator/>
            <Button Style="{StaticResource ToolbarBtn}" Content="⟨ 左側" Click="BtnEdgeLeft_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="右側 ⟩" Click="BtnEdgeRight_Click"/>
            <Button Style="{StaticResource ToolbarBtn}" Content="設定" Click="BtnOpenSettings_Click"/>
        </ToolBar>

        <!-- 頂部：麵包屑 -->
        <Border DockPanel.Dock="Top" Padding="10,6"
                Background="{DynamicResource App.PanelBrush}"
                BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="路徑：" FontWeight="Bold" Margin="0,0,8,0"/>
                <ItemsControl x:Name="Breadcrumb" ItemTemplate="{StaticResource BreadcrumbItem}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- 主區域 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaneColumn" Width="300"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition x:Name="RightPaneColumn" Width="360"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 左：檔案樹 -->
            <DockPanel Grid.Column="0">
                <Border DockPanel.Dock="Top" Padding="8" BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="檔案樹" FontWeight="Bold" Margin="0,0,12,0"/>
                            <CheckBox x:Name="ChkShowDesktop" Content="顯示桌面" IsChecked="True" Margin="6,0" Checked="TreeToggles_Changed" Unchecked="TreeToggles_Changed"/>
                            <CheckBox x:Name="ChkShowDrives" Content="顯示系統磁碟" IsChecked="True" Margin="6,0" Checked="TreeToggles_Changed" Unchecked="TreeToggles_Changed"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Button Content="根目錄" Style="{StaticResource ToolbarBtn}" Click="BtnOpenRoot_Click"/>
                            <Button Content="收件夾" Style="{StaticResource ToolbarBtn}" Click="BtnOpenHot_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TreeView x:Name="TvFolders" Margin="6">
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="整份資料夾加入收件匣" Click="Tree_MoveFolderToInbox_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="6" Background="#E0E0E0" HorizontalAlignment="Stretch"/>

            <!-- 中：清單 -->
            <DockPanel Grid.Column="2">
                <TabControl x:Name="MainTabs" SelectionChanged="MainTabs_SelectionChanged">
                    <TabItem Header="主頁" Tag="home">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListView x:Name="MainList" Grid.Row="0" SelectionMode="Extended"
                                      SelectionChanged="MainList_SelectionChanged"
                                      MouseDoubleClick="List_DoubleClick">
                                <ListView.View>
                                    <GridView x:Name="MainGridView" AllowsColumnReorder="True">
                                        <GridViewColumn Header="檔名" Width="240"
                                                        DisplayMemberBinding="{Binding FileName}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <GridViewColumn Header="副檔名" Width="90"
                                                        DisplayMemberBinding="{Binding Ext}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <!-- 狀態：左圓點 + 文字 -->
                                        <GridViewColumn Header="狀態" Width="120">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                                            <Ellipse.Fill>
                                                                <MultiBinding Converter="{x:Static local:MainWindow.StatusToBrushConverterInstance}">
                                                                    <Binding Path="Status"/>
                                                                </MultiBinding>
                                                            </Ellipse.Fill>
                                                        </Ellipse>
                                                        <TextBlock Text="{Binding Status, Converter={x:Static local:MainWindow.StatusToLabelConverterInstance}}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="專案" Width="180" DisplayMemberBinding="{Binding Project}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <GridViewColumn Header="標籤" Width="180" DisplayMemberBinding="{Binding Tags}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <GridViewColumn Header="路徑" x:Name="ColSourcePath" Width="320"
                                                        DisplayMemberBinding="{Binding SourcePath}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <GridViewColumn Header="預計路徑" x:Name="ColDestPath" Width="340"
                                                        DisplayMemberBinding="{Binding DestPath}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>

                                        <GridViewColumn Header="建立時間" Width="160"
                                                        DisplayMemberBinding="{Binding CreatedAt}">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <EventSetter Event="Click" Handler="ListHeader_Click"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>

                                <!-- 右鍵選單 -->
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="開啟檔案" Click="CmOpenFile_Click"/>
                                        <MenuItem Header="在檔案總管顯示" Click="CmRevealInExplorer_Click"/>
                                        <Separator/>
                                        <MenuItem Header="複製來源路徑" Click="CmCopySourcePath_Click"/>
                                        <MenuItem Header="複製預計目的地" Click="CmCopyDestPath_Click"/>
                                        <Separator/>
                                        <MenuItem Header="添加標籤..." Click="CmAddTags_Click"/>
                                        <Separator/>
                                        <MenuItem Header="加入收件匣（暫存）" Click="CmStageToInbox_Click"/>
                                        <MenuItem Header="只分類（不搬檔）" Click="CmClassify_Click"/>
                                        <MenuItem Header="確認搬檔（Commit）" Click="CmCommit_Click"/>
                                        <Separator/>
                                        <MenuItem Header="刪除資料列（僅 DB）" Click="CmDeleteRecord_Click"/>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>

                            <!-- 下方工具列 -->
                            <DockPanel Grid.Row="1" Margin="8">
                                <TextBlock x:Name="TxtCounter" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="產生建議" Margin="8,0,0,0" Click="BtnGenTags_Click"/>
                                    <Button Content="摘要" Margin="8,0,0,0" Click="BtnSummarize_Click"/>
                                    <Button Content="信心分析" Margin="8,0,0,0" Click="BtnAnalyzeConfidence_Click"/>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="我的最愛" Tag="fav"/>
                    <TabItem Header="處理中" Tag="processing"/>
                    <TabItem Header="待處理" Tag="backlog"/>
                    <TabItem Header="黑名單" Tag="blacklist"/>
                    <TabItem Header="自動整理（待確認）" Tag="autosort-staging"/>
                </TabControl>
            </DockPanel>

            <GridSplitter Grid.Column="3" Width="6" Background="#E0E0E0" HorizontalAlignment="Stretch"/>

            <!-- 右：檔案資訊 -->
            <DockPanel Grid.Column="4" Margin="6">
                <StackPanel>
                    <TextBlock Text="檔案資訊" FontWeight="Bold" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="檔名"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RtName"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="副檔名"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RtExt"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="大小"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RtSize"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="建立時間"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RtCreated"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="修改時間"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="RtModified"/>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="狀態"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="RtStatus"/>
                    </Grid>

                    <TextBlock Text="建議專案名稱" Margin="0,8,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="RtSuggestedProject" Width="220" IsEditable="True" />
                        <Button Content="套用建議" Margin="8,0,0,0" Click="BtnApplySuggestedProject_Click"/>
                    </StackPanel>

                    <Separator Margin="0,12,0,12"/>

                    <TextBlock Text="資訊欄" FontWeight="Bold" Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                        <TextBlock Text="信心門檻：" VerticalAlignment="Center"/>
                        <Slider x:Name="RtThreshold" Minimum="0" Maximum="1" Width="160" ValueChanged="RtThreshold_ValueChanged"/>
                        <TextBlock x:Name="RtThresholdValue" Margin="6,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="黑名單資料夾（逗號分隔）" Margin="0,0,0,4"/>
                    <TextBox x:Name="RtBlacklist" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="套用" Click="BtnApplyAiTuning_Click"/>
                        <Button Content="重新載入設定" Margin="8,0,0,0" Click="BtnReloadSettings_Click"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- 下：Log -->
            <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="8,8,8,12">
                <Expander x:Name="LogExpander" Header="紀錄（Log）" IsExpanded="False">
                    <Border BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="NoWrap"
                                     Background="{DynamicResource App.PanelBrush}" BorderThickness="0" MinHeight="80"/>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
