<Window x:Class="AI.KB.Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AI.KB.Assistant.Views"
        
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        
        Title="AIKA"
        Icon="/石頭的LOGO_1.png"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" 
        
        Background="{DynamicResource App.BackgroundBrush}"
        Foreground="{DynamicResource App.TextBrush}">

    <Window.Resources>
        <!-- 共用樣式 -->
        <Style x:Key="ToolbarBtn" TargetType="Control">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderClickable" TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}" />
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="30"/>
            <EventSetter Event="Click" Handler="ListHeader_Click"/>
        </Style>

        <DataTemplate x:Key="BreadcrumbItem">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" 
                           Cursor="Hand"
                           MouseLeftButtonDown="BreadcrumbItem_Click">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource App.HighlightBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="  ›  " Margin="4,0,4,0" 
                           Foreground="{DynamicResource App.TextMutedBrush}" />
            </StackPanel>
        </DataTemplate>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" SnapsToDevicePixels="True">
                            <Grid>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding ToolTip}"
                                           Foreground="{DynamicResource App.TextMutedBrush}"
                                           Padding="{TemplateBinding Padding}"
                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                           Margin="4,0,0,0"
                                           IsHitTestVisible="False" 
                                           Visibility="Collapsed"
                                           TextWrapping="NoWrap"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Focusable="false"
                                              HorizontalScrollBarVisibility="Hidden"
                                              VerticalScrollBarVisibility="Hidden"
                                              Background="Transparent" 
                                              BorderThickness="0"
                                              Padding="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsFocused" Value="True"/>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource App.HighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource App.HighlightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- 工具列 -->
        <Border DockPanel.Dock="Top" Padding="4,4,8,4" 
                Background="{DynamicResource App.PanelBrush}"
                BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
            <WrapPanel>
                <Button x:Name="BtnAddFiles" Style="{StaticResource ToolbarBtn}" Content="＋ 加入檔案" Click="BtnAddFiles_Click"/>

                <!-- 一鍵自動化 -->
                <Button x:Name="BtnOneClickAutoCommit" Style="{StaticResource ToolbarBtn}" 
                        Content="✨ 自動分類 (全收件匣)" 
                        ToolTip="執行：掃描收件匣 -> 刷新清單 -> 自動確認搬檔"
                        Click="BtnOneClickAutoCommit_Click"/>

                <!-- 掃描選單 -->
                <Menu x:Name="MenuScan" Margin="4,2" VerticalAlignment="Center">
                    <MenuItem Header="🔄 掃描與檢視..." Style="{StaticResource ToolbarBtn}">
                        <MenuItem x:Name="MenuScanShallow" Header="[掃描] 僅收件匣第一層" 
                                  Click="MenuScanShallow_Click"/>
                        <MenuItem x:Name="MenuScanRecursive" Header="[掃描] 收件匣 (含子資料夾)" 
                                  Click="MenuScanRecursive_Click"/>
                        <Separator/>
                        <MenuItem Header="[檢視] 切換路徑 (預計/來源)" 
                                  Click="BtnStartClassify_Click"/>
                    </MenuItem>
                </Menu>

                <!-- 手動確認 -->
                <Button x:Name="BtnCommit" Style="{StaticResource ToolbarBtn}" 
                        Content="手動確認搬檔" 
                        ToolTip="手動提交清單中選取的或所有可處理的項目"
                        Click="BtnCommit_Click"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,2"/>

                <Menu x:Name="MenuClean" Margin="4,2" VerticalAlignment="Center">
                    <MenuItem Header="🧹 清理收件夾..." Style="{StaticResource ToolbarBtn}">
                        <MenuItem Header="🗑️ 清除 [已分類] 的實體檔案 (B)" 
                                  ToolTip="[選項B] 刪除 HotFolder 中已搬移 (Committed) 的實體檔案 (用於「複製」模式)"
                                  Click="BtnClearCommitted_Click"/>
                        <MenuItem Header="🔄 重置 [未處理] の資料庫狀態 (C)" 
                                  ToolTip="[選項C] 清除資料庫中所有未處理 (Intaked/Error) 的紀錄，以便下次重新掃描"
                                  Click="BtnResetInbox_Click"/>
                    </MenuItem>
                </Menu>

                <!-- 導航 -->
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,2"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="🗂 收件夾" Click="BtnOpenHot_Click"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="📁 根目錄" Click="BtnOpenRoot_Click"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="📂 待整理" Click="BtnOpenPendingFolder_Click"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="🗄 資料庫" Click="BtnOpenDb_Click"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,2"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="＜檔案結構" Click="BtnEdgeLeft_Click"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="詳細資料＞" Click="BtnEdgeRight_Click"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="設定" Click="BtnOpenSettings_Click"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,2"/>
                <Button Style="{StaticResource ToolbarBtn}" Content="↩️ 返回簡易版" Click="BtnGoToSimpleMode_Click"/>
            </WrapPanel>
        </Border>

        <!-- 麵包屑 Breadcrumb -->
        <Border DockPanel.Dock="Top" Padding="10,6"
                Background="{DynamicResource App.PanelBrush}"
                BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="路徑：" FontWeight="Bold" Margin="0,0,8,0"/>
                <ItemsControl x:Name="Breadcrumb" ItemTemplate="{StaticResource BreadcrumbItem}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaneColumn" Width="300"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition x:Name="RightPaneColumn" Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- 左側 TreeView -->
            <DockPanel Grid.Column="0">
                <Border DockPanel.Dock="Top" Padding="8"
                        BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TvFilterBox" Grid.Column="0" Style="{StaticResource SearchBoxStyle}"
                                 ToolTip="搜尋資料夾..."
                                 TextChanged="TvFilterBox_TextChanged"/>

                        <Button x:Name="BtnRefreshTree" Grid.Column="1" Content="🔄重新整理" 
                                ToolTip="重新整理檔案樹" 
                                Style="{StaticResource ToolbarBtn}" 
                                Margin="4,2,0,2" Padding="8,4" 
                                Click="BtnRefreshTree_Click" />
                    </Grid>
                </Border>

                <TreeView x:Name="TvFolders" Margin="6,6,0,0" 
                          SelectedItemChanged="TvFolders_SelectedItemChanged">
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="指定並鎖定為專案" Click="Tree_LockProject_Click"/>
                            <MenuItem Header="移除指定專案" Click="Tree_UnlockProject_Click"/>
                            <Separator/>
                            <MenuItem x:Name="MenuTreeMoveToInbox" Header="整份資料夾加入收件匣" Click="Tree_MoveFolderToInbox_Click"/>
                            <Separator/>
                            <MenuItem Header="新增資料夾..." Click="Tree_NewFolder_Click"/>
                            <MenuItem Header="重新命名..." Click="Tree_Rename_Click"/>
                            <MenuItem Header="刪除" Click="Tree_Delete_Click"/>
                            <Separator/>
                            <MenuItem Header="在檔案總管開啟" Click="CmFolderOpen_Click"/>
                            <MenuItem Header="複製此路徑" Click="CmFolderCopyPath_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="6" Background="{DynamicResource App.BorderBrush}" HorizontalAlignment="Stretch"/>

            <!-- 中間列表 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter Bar -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TabControl x:Name="MainTabs" Grid.Row="0" SelectionChanged="MainTabs_SelectionChanged">
                        <TabItem Header="主頁" Tag="home"/>
                        <TabItem Header="我的最愛" Tag="fav"/>
                        <TabItem Header="進行中" Tag="progress"/>
                        <TabItem Header="待處理" Tag="backlog"/>
                        <TabItem Header="最近加入" Tag="recent"/>
                        <TabItem Header="等待分類" Tag="pending"/>
                    </TabControl>

                    <Border Grid.Row="1" Padding="8"
                            Background="{DynamicResource App.PanelBrush}"
                            BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtSearchKeywords" Grid.Column="0" Margin="0,0,8,0"
                                     Style="{StaticResource SearchBoxStyle}"
                                     ToolTip="搜尋檔名、標籤、附註..."
                                     TextChanged="TxtSearchKeywords_TextChanged"
                                     TextWrapping="NoWrap"/>

                            <ComboBox x:Name="CmbSearchProject" Grid.Column="1" Width="180" Margin="0,0,8,0"
                                      ToolTip="篩選專案"
                                      IsEditable="False"
                                      SelectionChanged="CmbSearchProject_SelectionChanged"
                                      Style="{StaticResource ToolbarBtn}"/>

                            <ToggleButton x:Name="BtnLockProject" Grid.Column="2" 
                                          Style="{StaticResource ToolbarBtn}"
                                          Content="🔒 鎖定專案"
                                          Click="BtnLockProject_Click"/>

                            <CheckBox x:Name="ChkHideCommitted" Grid.Column="3"
                                      Content="隱藏已分類" VerticalAlignment="Center"
                                      Margin="12,0,0,0"
                                      Checked="ChkHideCommitted_Changed"
                                      Unchecked="ChkHideCommitted_Changed"/>

                            <TextBlock x:Name="TxtCounter" Grid.Column="4" 
                                       VerticalAlignment="Center" Margin="12,0,8,0"
                                       Foreground="{DynamicResource App.TextMutedBrush}"/>

                        </Grid>
                    </Border>
                </Grid>

                <!-- ListView -->
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListView x:Name="MainList" Grid.Row="0"
                                  SelectionMode="Extended"
                                  SelectionChanged="MainList_SelectionChanged"
                                  MouseDoubleClick="List_DoubleClick"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">

                            <ListView.View>
                                <GridView x:Name="MainGridView" AllowsColumnReorder="True">

                                    <GridViewColumn Header="檔名" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="{Binding FileIcon}" Width="16" Height="16" Margin="0,0,5,0"
                                                           VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="副檔名" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="60" DisplayMemberBinding="{Binding Ext}"/>

                                    <GridViewColumn Header="類別" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="80" DisplayMemberBinding="{Binding Category}"/>

                                    <GridViewColumn Header="狀態" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                                        <Ellipse.Fill>
                                                            <MultiBinding Converter="{x:Static local:MainWindow.StatusToBrushConverterInstance}">
                                                                <Binding Path="Status"/>
                                                            </MultiBinding>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <TextBlock Text="{Binding Status, Converter={x:Static local:MainWindow.StatusToLabelConverterInstance}}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="專案" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="100" DisplayMemberBinding="{Binding Project}"/>

                                    <GridViewColumn Header="標籤" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="80" DisplayMemberBinding="{Binding Tags}"/>

                                    <GridViewColumn Header="路徑" x:Name="ColSourcePath"
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="320" DisplayMemberBinding="{Binding SourcePath}"/>

                                    <GridViewColumn Header="建立時間" 
                                                    HeaderContainerStyle="{StaticResource HeaderClickable}"
                                                    Width="80" DisplayMemberBinding="{Binding CreatedAt}"/>

                                </GridView>
                            </ListView.View>

                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="開啟檔案" Click="CmOpenFile_Click"/>
                                    <MenuItem Header="在檔案總管顯示" Click="CmRevealInExplorer_Click"/>
                                    <Separator/>
                                    <MenuItem Header="複製來源路徑" Click="CmCopySourcePath_Click"/>
                                    <MenuItem Header="複製預計目的地" Click="CmCopyDestPath_Click"/>
                                    <Separator/>
                                    <MenuItem Header="重新命名..." Click="Cm_Rename_Click"/>
                                    <MenuItem Header="刪除檔案" Click="Cm_Delete_Click"/>
                                    <Separator/>
                                    <MenuItem Header="★ 加入/移出 我的最愛" Click="CmToggleFavorite_Click"/>
                                    <MenuItem Header="標記為：進行中" Click="CmAddTagProgress_Click"/>
                                    <MenuItem Header="標記為：待處理" Click="CmAddTagBacklog_Click"/>
                                    <MenuItem Header="標記為：等待分類" Click="CmAddTagPending_Click"/>
                                    <MenuItem Header="... 自訂標籤" Click="CmAddTags_Click"/>
                                    <MenuItem Header="移除所有標籤" Click="CmRemoveAllTags_Click"/>
                                    <Separator/>
                                    <MenuItem Header="直接分類" Click="CmCommit_Click"/>
                                    <Separator/>
                                    <MenuItem Header="刪除資料列（僅 DB）" Click="CmDeleteRecord_Click"/>
                                </ContextMenu>
                            </ListView.ContextMenu>
                        </ListView>

                        <Expander Grid.Row="1" Header="日誌 (Log)" IsExpanded="False"
                                  BorderBrush="{DynamicResource App.BorderBrush}" BorderThickness="0,1,0,0">
                            <TextBox x:Name="LogBox" IsReadOnly="True" 
                                     Height="150"
                                     Background="{DynamicResource App.LogBrush}"
                                     Foreground="{DynamicResource App.TextMutedBrush}"
                                     FontFamily="Consolas" FontSize="12"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Expander>
                    </Grid>

                    <Border x:Name="LoadingOverlay" Grid.RowSpan="2"
                            Background="#AA000000"
                            Visibility="Collapsed">
                        <TextBlock x:Name="LoadingText" Text="處理中..."
                                   Foreground="White" FontSize="22"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                </Grid>
            </Grid>

            <GridSplitter Grid.Column="3" Width="6" Background="{DynamicResource App.BorderBrush}" HorizontalAlignment="Stretch"/>

            <!-- 右側面板 -->
            <ScrollViewer Grid.Column="4" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">

                    <Expander Header="檔案資訊" IsExpanded="True">
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="檔名"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RtName" TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="副檔名"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RtExt"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="大小"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RtSize"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="建立時間"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RtCreated"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="修改時間"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="RtModified"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="狀態"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="RtStatus"/>

                            <Button x:Name="BtnAnalyzeConfidence" Grid.Row="6" Grid.Column="1" Content="分析信心度 (AI)" Margin="8,8,0,0" HorizontalAlignment="Left" Click="BtnAnalyzeConfidence_Click"/>
                        </Grid>
                    </Expander>

                    <Expander Header="進階中繼資料" Margin="0,12,0,0" IsExpanded="True">
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="拍攝日期"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RtShotDate" Text="-"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="相機型號"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RtCameraModel" Text="-" TextWrapping="Wrap"/>
                        </Grid>
                    </Expander>

                    <Expander Header="分類" Margin="0,12,0,0" IsExpanded="True">
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="建議專案名稱"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <ComboBox x:Name="RtSuggestedProject" Width="220" IsEditable="True"/>
                                <Button Content="套用" Margin="8,0,0,0" 
                                        Click="BtnApplySuggestedProject_Click"/>
                            </StackPanel>
                            <Button x:Name="BtnGenProject" Content="產生建議專案 (AI)" Margin="8,8,0,0" HorizontalAlignment="Left" Click="BtnGenProject_Click"/>

                            <TextBlock Text="標籤 (以 , 或 ; 分隔)" Margin="0,12,0,4"/>

                            <WrapPanel Margin="0,0,0,8">
                                <Button Content="★ 最愛" Margin="0,0,6,6" Click="RtQuickTag_Favorite_Click"/>
                                <Button Content="▶ 進行中" Margin="0,0,6,6" Click="RtQuickTag_InProgress_Click"/>
                                <Button Content="■ 待處理" Margin="0,0,6,6" Click="RtQuickTag_Backlog_Click"/>
                                <Button Content="... 等待分類" Margin="0,0,6,6" Click="RtQuickTag_Pending_Click"/>
                                <Button Content="清空" Margin="12,0,6,6" Click="RtQuickTag_Clear_Click"/>
                            </WrapPanel>

                            <TextBox x:Name="RtTags" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="套用標籤" HorizontalAlignment="Left"
                                        Click="RtBtnApplyTags_Click"/>
                                <Button x:Name="BtnGenTags" Content="產生建議標籤 (AI)" Margin="8,0,0,0" HorizontalAlignment="Left" Click="BtnGenTags_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <Expander Header="檔案預覽" Margin="0,12,0,0" IsExpanded="True">
                        <Grid MinHeight="150" Background="{DynamicResource App.LogBrush}">
                            <Image x:Name="RtPreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                            <TextBox x:Name="RtPreviewText" IsReadOnly="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     TextWrapping="Wrap"
                                     Background="Transparent" BorderThickness="0"
                                     Visibility="Collapsed"/>

                            <!-- WebView2 -->
                            <wv2:WebView2 x:Name="RtPreviewWebView" Visibility="Collapsed"/>

                            <TextBlock x:Name="RtPreviewNotSupported" Text="(此檔案格式不支援預覽)" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Foreground="{DynamicResource App.TextMutedBrush}"/>

                            <Button x:Name="BtnSummarize" Content="產生摘要 (AI)" Margin="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnSummarize_Click"/>
                        </Grid>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>