<Window x:Class="AI.KB.Assistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI.KB Assistant" Height="720" Width="1160"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition x:Name="RightPaneColumn" Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" LastChildFill="False" Margin="8">
            <Button Content="收件夾" Click="BtnOpenInbox_Click"/>
            <Button Content="重新整理" Click="BtnRefresh_Click"/>
            <ToggleButton x:Name="TgTheme" Content="深/淺主題" Margin="6,0,0,0" Checked="TgTheme_Checked" Unchecked="TgTheme_Checked"/>
            <Button Content="設定" Click="BtnOpenSettings_Click"/>
            <Button Content="收合右欄" Click="BtnToggleRightPane_Click"/>
        </DockPanel>

        <!-- center: tabs + list -->
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="8">
            <TabControl x:Name="MainTabs" SelectionChanged="MainTabs_SelectionChanged">
                <TabItem Header="已分類" Tag="auto-sorted"/>
                <TabItem Header="收件匣" Tag="inbox"/>
                <TabItem Header="待確認" Tag="pending"/>
                <TabItem Header="處理中" Tag="in-progress"/>
                <TabItem Header="我的最愛" Tag="favorite"/>
                <TabItem Header="最近" Tag="recent"/>
            </TabControl>
            <ListView x:Name="FileList"
                      Margin="0,8,0,0"
                      PreviewMouseDoubleClick="FileList_PreviewMouseDoubleClick"
                      KeyDown="FileList_KeyDown">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="檔名" Width="300" DisplayMemberBinding="{Binding filename}"/>
                        <GridViewColumn Header="型態" Width="80"  DisplayMemberBinding="{Binding filetype}"/>
                        <GridViewColumn Header="分類" Width="120" DisplayMemberBinding="{Binding category}"/>
                        <GridViewColumn Header="專案" Width="140" DisplayMemberBinding="{Binding project}"/>
                        <GridViewColumn Header="狀態" Width="100" DisplayMemberBinding="{Binding status}"/>
                        <GridViewColumn Header="建立時間" Width="120" DisplayMemberBinding="{Binding created_ts}"/>
                        <GridViewColumn Header="路徑" Width="450" DisplayMemberBinding="{Binding path}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <!-- right panel: 專案鎖定 + 建議 -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8">
            <TextBlock Text="專案鎖定（ProjectLock）" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <ComboBox x:Name="CbLockProject" Width="180"/>
                <Button Content="鎖定 / 解除" Click="BtnLockProject_Click"/>
            </StackPanel>
            <TextBlock x:Name="TxtLockedProject" Margin="0,6,0,0"/>
            <Separator Margin="0,8,0,8"/>
            <TextBlock Text="AI 建議專案（對選取檔案）" FontWeight="Bold"/>
            <Button Content="產生建議與套用" Click="BtnSuggestProject_Click"/>
        </StackPanel>

        <!-- bottom log -->
        <TextBox x:Name="LogBox"
                 Grid.Row="2" Grid.ColumnSpan="2"
                 Margin="8"
                 IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
 